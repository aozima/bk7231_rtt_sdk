sys_config = os.path.join(cwd, '..', '..', 'app', 'config', 'sys_config.h')
options = LocalOptions(sys_config)

ble_lib_name = 'ble'

if (GetLocalDepend(options, 'CFG_USE_BLE_PS') == 1):
    ble_lib_name += '_ps'

if (GetDepend('RT_USING_BLE')):
	print 'using rwnx_ble: lib' + ble_lib_name + '.a'

libs = [ble_lib_name]
libpath = [cwd + '/']

cppdefines = ['CFG_SUPPORT_BLE']

group_use_lib = DefineGroup('beken_ble_lib', src_pub, depend = ['RT_USING_BLE'], CPPPATH = path, CPPDEFINES = cppdefines, LIBS = libs, LIBPATH = libpath)

group_build_lib = DefineGroup('beken_ble', src_lib, depend = ['RT_USING_BLE', 'BUILD_LIB'], CPPPATH = path, CPPDEFINES = cppdefines, LIBS = libs, LIBPATH = libpath)

group = group_use_lib + group_build_lib

Return('group')
